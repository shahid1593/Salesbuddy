    <script>
        // --- DATA STATE ---
        let db = []; 
        const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

        // --- DOM ELEMENTS ---
        const fileInput = document.getElementById('excelInput');
        const loginForm = document.getElementById('loginForm');
        const displayFile = document.getElementById('fileNameDisplay');
        const fileHelpText = document.getElementById('fileHelpText');
        const loginError = document.getElementById('loginError');
        const loginScreen = document.getElementById('loginScreen');
        const appContainer = document.getElementById('appContainer');

        // --- FILE UPLOAD HANDLER ---
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;

            displayFile.innerText = "Processing...";
            
            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    
                    // Convert to JSON
                    db = XLSX.utils.sheet_to_json(firstSheet);
                    
                    // Update UI
                    displayFile.innerHTML = `<i class="ph ph-check-circle text-emerald-600"></i> Loaded ${db.length} Agents`;
                    fileHelpText.innerText = `File: ${file.name}`;
                    fileHelpText.classList.add('text-emerald-600');
                    
                    // Enable Login
                    enableLoginForm();
                    
                    console.log("Data Loaded:", db);
                } catch (err) {
                    alert("Error reading Excel file. Please ensure it follows the format.");
                    displayFile.innerText = "Error Loading File";
                    console.error(err);
                }
            };
            reader.readAsArrayBuffer(file);
        });

        function enableLoginForm() {
            loginForm.classList.remove('opacity-50', 'pointer-events-none');
            loginForm.removeAttribute('title');
        }

        // --- LOGIN LOGIC ---
        loginForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const code = document.getElementById('agentCodeInput').value.trim();
            
            // Find Agent (Case insensitive)
            const agent = db.find(row => row.Code && row.Code.toString().toUpperCase() === code.toUpperCase());

            if (!agent) {
                loginError.innerText = "Agent Code not found in the uploaded file.";
                loginError.classList.remove('hidden');
                return;
            }

            // Success
            loadDashboard(agent);
        });

        // --- LOGOUT LOGIC ---
        document.getElementById('logoutBtn').addEventListener('click', () => {
            // 1. Hide App
            appContainer.classList.add('opacity-0', 'pointer-events-none');
            
            // 2. Show Login Screen
            loginScreen.style.display = 'flex';
            setTimeout(() => {
                loginScreen.classList.remove('opacity-0', 'pointer-events-none');
            }, 50);

            // 3. Reset Input but KEEP Data
            document.getElementById('agentCodeInput').value = '';
            loginError.classList.add('hidden');
        });

        // --- DASHBOARD RENDER ---
        function loadDashboard(agent) {
            // Hide Login
            loginScreen.classList.add('opacity-0', 'pointer-events-none');
            setTimeout(() => loginScreen.style.display = 'none', 500);
            
            // Show App
            appContainer.classList.remove('opacity-0', 'pointer-events-none');
            
            // 1. SET HEADER INFO
            document.getElementById('headerAgentName').innerText = agent.Name || "Unknown Agent";
            document.getElementById('headerAgentCode').innerText = agent.Code;

            // 2. PROCESS DATA
            let freshTotal = 0;
            let renewalTotal = 0;
            const monthlyData = [];

            months.forEach(m => {
                const f = parseFloat(agent[`Fresh_${m}`] || 0);
                const r = parseFloat(agent[`Renewal_${m}`] || 0);
                freshTotal += f;
                renewalTotal += r;
                monthlyData.push({ month: m.toUpperCase(), fresh: f, renewal: r });
            });

            // 3. RENDER MONTH VIEW
            const grid = document.getElementById('calendarGrid');
            grid.innerHTML = '';
            monthlyData.forEach((d, i) => {
                const isZero = d.fresh === 0 && d.renewal === 0;
                grid.innerHTML += `
                    <div class="bg-white dark:bg-slate-900 p-4 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm relative overflow-hidden ${isZero ? 'opacity-50 grayscale' : ''}">
                        <div class="flex justify-between items-center mb-2">
                            <span class="font-bold text-slate-700 dark:text-slate-200 text-lg">${d.month}</span>
                            ${!isZero ? '<div class="w-2 h-2 rounded-full bg-indigo-500"></div>' : ''}
                        </div>
                        <div class="space-y-2">
                            <div class="bg-emerald-50 dark:bg-emerald-900/20 p-2 rounded border-l-4 border-emerald-500">
                                <div class="text-[10px] text-slate-500 uppercase">Fresh</div>
                                <div class="font-bold text-emerald-700 dark:text-emerald-400">₹ ${d.fresh.toLocaleString()}</div>
                            </div>
                            <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded border-l-4 border-blue-500">
                                <div class="text-[10px] text-slate-500 uppercase">Renewal</div>
                                <div class="font-bold text-blue-700 dark:text-blue-400">₹ ${d.renewal.toLocaleString()}</div>
                            </div>
                        </div>
                    </div>
                `;
            });

            // 4. RENDER YTD VIEW
            document.getElementById('ytdFreshDisplay').innerText = freshTotal.toLocaleString();
            document.getElementById('ytdRenewalDisplay').innerText = renewalTotal.toLocaleString();
            
            const targetFresh = agent.Target_Fresh || 5000000;
            const targetRenewal = agent.Target_Renewal || 2000000;
            
            document.getElementById('ytdFreshTarget').innerText = `Target: ₹ ${targetFresh.toLocaleString()}`;
            document.getElementById('ytdRenewalTarget').innerText = `Target: ₹ ${targetRenewal.toLocaleString()}`;

            // Reset widths first to trigger animation
            document.getElementById('ytdFreshBar').style.width = '0%';
            document.getElementById('ytdRenewalBar').style.width = '0%';

            setTimeout(() => {
                const freshPct = Math.min((freshTotal / targetFresh) * 100, 100);
                const renewalPct = Math.min((renewalTotal / targetRenewal) * 100, 100);
                document.getElementById('ytdFreshBar').style.width = freshPct + '%';
                document.getElementById('ytdRenewalBar').style.width = renewalPct + '%';
            }, 300);

            // 5. RENDER SHIKHAR
            document.getElementById('shikharCurrent').innerText = agent.Shikhar_Current || "Base Camp";
            document.getElementById('shikharNext').innerText = agent.Shikhar_Next || "Summit";
            
            const excelShortfall = agent.Shikhar_Shortfall ? parseFloat(agent.Shikhar_Shortfall) : 150000;
            document.getElementById('shikharShortfall').innerText = excelShortfall.toLocaleString();
            
            document.getElementById('shikharBar').style.width = '0%';
            setTimeout(() => {
                document.getElementById('shikharBar').style.width = '75%';
            }, 500);

            // Open Default Tab
            switchTab('month');
        }

        // --- TABS ---
        function switchTab(tab) {
            document.querySelectorAll('.nav-pill').forEach(b => {
                b.classList.remove('bg-indigo-600', 'text-white', 'shadow-lg');
                b.classList.add('text-slate-600', 'dark:text-slate-400');
            });
            document.getElementById(`tab-${tab}`).classList.add('bg-indigo-600', 'text-white', 'shadow-lg');
            document.getElementById(`tab-${tab}`).classList.remove('text-slate-600', 'dark:text-slate-400');

            document.querySelectorAll('.view-section').forEach(v => v.classList.add('hidden'));
            const active = document.getElementById(`view-${tab}`);
            active.classList.remove('hidden');
            
            active.querySelectorAll('.fade-in').forEach(el => {
                el.style.animation = 'none';
                el.offsetHeight; 
                el.style.animation = null;
            });
        }

        // --- THEME ---
        document.getElementById('themeToggle').addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });

    </script>
</body>
</html>
